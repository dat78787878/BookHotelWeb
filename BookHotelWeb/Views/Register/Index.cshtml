
@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng kí</title>
    <link rel="stylesheet" href="/Content/CSS/login.css">
</head>
<body>
    <div class="login">
        <div class="title" style="margin-top:0px">
            Đăng Kí tài khoản
        </div>
        <div class="login-body">
            <form action="#" method="post">
                <div class="username">
                    <div class="text">Tài khoản đăng nhập</div>
                    <input type="text" class="input user-name" placeholder="Tài khoản" name="Username">
                </div>
                <div class="password">
                    <div class="text">Mật khẩu</div>
                    <input type="text" class="input pass-word" placeholder="Mật khẩu" name="Password">
                </div>
                <div class="password">
                    <div class="text">Xác nhận mật khẩu</div>
                    <input type="password" class="input pass-word" placeholder="Xác nhận mật khẩu" name="ConfirmPassword">
                </div>
                <div class="phone-number">
                    <div class="text">Số điện thoại</div>
                    <input type="text" class="input phone-number" placeholder="Số điện thoại" name="PhoneNumber">
                </div>
                <div class="full-name">
                    <div class="text">Họ và tên</div>
                    <input type="text" class="input full-name" placeholder="Họ và tên" name="FullName">
                </div>
                <div class="email">
                    <div class="text">Email</div>
                    <input type="text" class="input email" placeholder="Email" name="Email">
                </div>
                <span style="color:red;margin-top:10px;">@ViewBag.Mes</span>
                <div class="row-3">
                    <div class="btn">
                        <input type="submit" class="btn-login" value="Đăng kí">
                    </div>
                    <div class="text">
                        <a href="#">Quên mật khẩu</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="login-footer">
            <div class="text-question">
                Bạn đã đăng kí?
                <a href="/Login/Index">Đăng Nhập</a>
            </div>
            <div class="social-media">
                <div class="text">Hoặc đăng nhập bằng:</div>
                <div class="social-button">
                    <button class="btn-1 btn-facebook">
                        <div class="icon"></div>
                        <div class="text">Facebook</div>
                    </button>
                    <button class="btn-1 btn-margin  btn-google">
                        <div class="icon"></div>
                        <div class="text">Google</div>
                    </button>
                    <button class="btn-1 btn-margin  btn-github">
                        <div class="icon"></div>
                        <div class="text">Github</div>
                    </button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

